<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Cell.Paginas.ImageCellPage">
    <ContentPage.Content>
        <ListView x:Name="ListaFuncionario">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Foto}" Text="{Binding Nome}" Detail="{Binding Cargo}" ></ImageCell>
                    <!--TextColor="" DetailColor=""-->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </ContentPage.Content>
</ContentPage>